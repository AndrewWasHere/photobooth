#:kivy 1.9.0

<SelectingScreen>:
    # +-----------------+
    # |+---+ +---+ +---+|
    # || 1 | | 2 | | 3 ||
    # |+---+ +---+ +---+|
    # ||Print|  |Cancel||
    # +-----------------+
    name: 'selecting'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Button:
                text: 'Image 1'
            Button:
                text: 'Image 2'
            Button:
                text: 'Image 3'
        BoxLayout:
            Button:
                text: 'Print'
            Button:
                text: 'Cancel'

<PrintingScreen>:
    # +-----------------+
    # |                 |
    # |   Printing...   |
    # |                 |
    # |                 |
    # +-----------------+
    name: 'printing'
    BoxLayout:
        Label:
            text: 'Printing...'
            halign: 'center'
            valign: 'middle'
            size_hint: 1, 1
            font_size: 50
